      <input type="text" class="user-input form-control inline" placeholder="Full name of character">
      <br/>

      <br/>
      <button class="api-data btn btn-default"> GoT info</button>
      </form>
    <!-- </form> -->
    <br/>
    <div class="fire-ice-container"></div>

  </div>

